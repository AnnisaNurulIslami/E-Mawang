<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PersuratanMawang" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/league_spartan_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="title">
        <item name="fontFamily">@font/league_spartan_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="subtitle">
        <item name="fontFamily">@font/league_spartan_semi_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="info_text">
        <item name="android:fontFamily">@font/league_spartan_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="blue_text">
        <item name="fontFamily">@font/league_spartan_medium</item>
        <item name="android:textColor">@color/main_blue</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="red_text">
        <item name="fontFamily">@font/league_spartan_medium</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="text_button">
        <item name="fontFamily">@font/league_spartan_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text_button_white">
        <item name="fontFamily">@font/league_spartan_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="button_file">
        <item name="fontFamily">@font/league_spartan_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="et_text">
        <item name="fontFamily">@font/league_spartan_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="BottomNavigationViewTextStyle">
        <item name="android:fontFamily">@font/league_spartan_regular</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>